@model Recast.WebApp.Models.ViewModel.FeedViewModel
@{
    ViewBag.Title = "New feed";
}

<h2>Create a new feed</h2>
@if (ViewBag.IsDuplicate != null && ViewBag.IsDuplicate)
{
    <div class="ui-state-error">
        <h4>Feed already exists.</h4>
    </div>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div>
        Your name:
    </div>
    <div>
        @Html.EditorFor(model => model.UserName)
        @Html.ValidationMessageFor(model => model.UserName)
    </div>
    <div>
        Your feed name:
    </div>
    <div>
        @Html.EditorFor(model => model.FeedName)
        @Html.ValidationMessageFor(model => model.FeedName)
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}