@using Recast.WebApp.Models.Entities
@using Recast.WebApp.Models.ViewModel
@model Feed
@{
    ViewBag.Title = "Feed " + Model.RowKey;
}

<h2>Feed @Model.RowKey for @Model.PartitionKey</h2>

<fieldset>

    
</fieldset>

<ol>
@foreach (PostViewModel post in ViewBag.Posts)
{
    <li>@post.Title <span class="btn-group">@Html.ActionLink("Edit", "EditPost", new { userName = post.UserName, feedName = post.FeedName, title = post.Title }, new { @class = "btn"}) @Html.ActionLink("Delete", "DeletePost", new { userName = post.UserName, feedName = post.FeedName, title = post.Title }, new { @class = "btn"})</span></li>
}
</ol>

@Html.ActionLink("Add podcast post", "AddPost", "Feeds", new { userName = Model.PartitionKey, feedName = Model.RowKey }, new { @class = "btn btn-primary"})